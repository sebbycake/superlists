[Unit]
Description=Gunicorn server for SITENAME

[Service]
Restart=on-failure
User=sebastian
WorkingDirectory=/home/sebastian/sites/SITENAME/source
ExecStart=/home/sebastian/sites/SITENAME/virtualenv/bin/gunicorn \
        --bind unix:/tmp/SITENAME.socket \
        superlists.wsgi:application

[Install]
WantedBy=multi-user.target
        